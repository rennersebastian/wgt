<%= form_for(@task = Task.new) do |f| %>
  <%= f.hidden_field :wg_id, :value => current_user.wg_id %>
  
  <div class="form-group">
    <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>
	</div>
  <div class="form-group">
	<%= f.label :user %> <br />
	<%= f.collection_select(:user_id, User.where(wg_id: current_user.wg_id), :id, :username, prompt: true) %>
	</div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
