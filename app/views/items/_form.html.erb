<%= form_for(@item = Item.new) do |f| %>
  <%= f.hidden_field :wg_id, :value => current_user.wg_id %>
  
  <div class="form-group">
    <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>
	</div>
   <div class="form-group">
    <div class="field">
    <%= f.label :amount %> <br />
    <%= f.number_field :amount %>
  </div>
	</div>
  <div class="actions">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
